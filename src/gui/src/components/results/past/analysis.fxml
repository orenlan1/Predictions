<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane fx:id="analysisScreen" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.results.past.AnalysisController">
   <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="infoLabel" text="Please select the analysis to show:" />
            <HBox alignment="CENTER" spacing="50.0">
               <children>
                  <Button fx:id="graphButton" mnemonicParsing="false" onAction="#showGraph" prefHeight="40.0" prefWidth="150.0" text="Poppulation graph" />
                  <Button fx:id="propertyAnalysisButton" mnemonicParsing="false" onAction="#showPropertyAnalysis" prefHeight="40.0" prefWidth="150.0" text="Property analysis" />
               </children>
               <VBox.margin>
                  <Insets bottom="30.0" right="10.0" top="50.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets top="25.0" />
         </BorderPane.margin>
      </VBox>
   </top>
</BorderPane>
