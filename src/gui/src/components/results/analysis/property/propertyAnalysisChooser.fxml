<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.results.analysis.property.PropertyChooserController">
   <children>
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <MenuButton fx:id="entitySelector" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" text="Entity" />
            <MenuButton fx:id="propertySelector" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" text="Property" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="histogramButton" mnemonicParsing="false" onAction="#showHistogram" prefHeight="40.0" prefWidth="100.0" text="Histogram" />
            <Button fx:id="consistencyButton" mnemonicParsing="false" onAction="#showConsistency" prefHeight="40.0" prefWidth="100.0" text="Consistency" />
            <Button fx:id="meanButton" mnemonicParsing="false" onAction="#showMean" prefHeight="40.0" prefWidth="100.0" text="Mean" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
