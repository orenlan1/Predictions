<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="detailsBorderPane" prefHeight="455.0" prefWidth="1275.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.details.DetailsController">
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Simulation Details">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Button fx:id="envVariablesButton" mnemonicParsing="false" prefHeight="42.0" prefWidth="180.0" styleClass="details" text="Environment Variables" />
            <Button fx:id="gridButton" mnemonicParsing="false" prefHeight="42.0" prefWidth="180.0" styleClass="details" text="Grid" />
            <Button fx:id="entitiesButton" mnemonicParsing="false" onAction="#showEntities" prefHeight="42.0" prefWidth="180.0" styleClass="details" text="Entities" />
            <Button fx:id="rulesButton" mnemonicParsing="false" prefHeight="42.0" prefWidth="180.0" styleClass="details" text="Rules" />
            <Button fx:id="terminationButton" mnemonicParsing="false" prefHeight="42.0" prefWidth="180.0" styleClass="details" text="Termination" />
         </children>
         <padding>
            <Insets left="20.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets top="50.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <center>
      <ScrollPane id="entitiesListScrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" stylesheets="@detailsSheet.css" BorderPane.alignment="TOP_LEFT">
         <content>
            <FlowPane id="entitiesListFlowPane" fx:id="entitiesList" hgap="15.0" prefHeight="350.0" prefWidth="1000.0" vgap="15.0">
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
            </FlowPane>
         </content>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="50.0" />
         </BorderPane.margin>
         <padding>
            <Insets left="10.0" top="10.0" />
         </padding>
      </ScrollPane>
   </center>
</BorderPane>
